---
extends: airbnb

env:
  browser: true
  node: true
  jest: true
  jasmine: true

import/ignore:
  - \.js
  - \.(scss|less|css)$

rules:
  import/no-extraneous-dependencies: 0
  prefer-arrow-callback: 0
  no-var: 0
  func-names: 0
  prefer-template: 0
  object-shorthand: 0
  prefer-spread: 0
  prefer-rest-params: 0
  no-underscore-dangle: 0
